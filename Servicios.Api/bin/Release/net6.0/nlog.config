<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 autoReload="true"
 internalLogLevel="Info"
 internalLogFile="d:\ApiLogs\api_pokemon\Event_NLog.txt">
<extensions>
<add assembly="NLog.Web.AspNetCore"/>
</extensions>
<!-- reglas que definen la ruta donde se guardarÃ¡ el log -->
<targets>
<target
xsi:type="File"
name="log_general"
fileName="d:\ApiLogs\api_pokemon\Log_General-${shortdate}.txt"
 maxArchiveFiles="4"
archiveEvery="Day"
/>
<target
xsi:type="File"
name="log_error"
fileName="d:\ApiLogs\api_pokemon\Log_Error-${shortdate}.txt"
 maxArchiveFiles="4"
archiveEvery="Day"
/>
</targets>
<!-- reglas que definen el tipo de log a guardar -->
<rules>
<logger name="Microsoft.*" minlevel="Warn" writeTo="log_general" />
<logger name="Servicios.*" minlevel="Info" writeTo="log_general" />
<logger name="*" minlevel="Error" writeTo="log_error" />
</rules>
</nlog>